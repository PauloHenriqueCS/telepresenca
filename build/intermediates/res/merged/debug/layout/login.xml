<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/startbg"
    android:gravity="clip_horizontal"
    android:layout_gravity="clip_horizontal"
                android:padding="10dp"
                tools:context=".LoginActivity"
    android:keepScreenOn="true">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        android:orientation="vertical"

            android:paddingLeft="40dp"
            android:paddingRight="40dp"
        android:layout_above="@+id/loginName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Iniciar como:"
                android:textAllCaps="true"
                android:id="@+id/textView" android:layout_gravity="center_horizontal"
                android:textColor="@color/sinch_purple" android:textSize="20sp"/>

    </LinearLayout>

    <TextView
            android:id="@+id/loginName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:padding="10dp"
            android:textColor="@color/sinch_purple"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Gisele"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />

    <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button_login"
            android:minHeight="56dp"
            android:minWidth="132dp"
            android:textColor="@color/off_white"
            android:textSize="22sp"
            android:textStyle="bold"
        android:layout_below="@+id/loginName"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="34dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:text="NURSE VOICE"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/nurseV"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:text="O que Ã© o NURSE?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nurseIs"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:textColor="@color/sinch_purple" />
    </LinearLayout>


</RelativeLayout>